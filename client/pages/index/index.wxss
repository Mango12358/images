/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  /* overflow: hidden; */
}

.swiper-container {
  width: 100%;
  height: 360rpx;
}

.image-swiper-item {
  width: 100%;
  height: 100%;
}

.search-view {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  padding: 10rpx;
  display: flex;
}

.search-input {
  background: white;
  opacity: 0.6;
  width: 550rpx;
  padding-left: 50rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.input-place {
  margin-left: 20rpx;
  font-size: 26rpx;
  line-height: 60rpx;
}

.search-button {
  background: lightblue;
  opacity: 0.8;
  width: 120rpx;
  height: 60rpx;
  margin-left: 10rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  color: lightseagreen;
}

.search-icon {
  position: absolute;
  margin: 10rpx;
  margin-left: 15rpx;
}

.tab-container {
  background-color: white;
}

.tab-view {
  margin-top: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.image-list-view {
  margin-top: 10rpx;
  background: white;
  width: 100%;
  padding: 0rpx;
  padding-bottom: 0rpx;
}

.image-item {
  width: 750rpx;
}

.menu-container {
  background: white;
  width: 750rpx;
  margin-bottom: 15rpx;
  display: flex;
}

.menu-view {
  width: 20%;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.menu-image {
  width: 120rpx;
  height: 120rpx;
  margin: auto;
}

.menu-label {
  width: 120rpx;
  color: gray;
  font-size: 25rpx;
  line-height: 40rpx;
  align-self: center;
}

.load-button {
  margin-top: 10rpx;
  width: 100%;
  height: 70rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  border-radius: 5rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: center;
  color: lightseagreen;
}
