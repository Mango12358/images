/**index.wxss**/

page {
  background: linear-gradient(darkBlue, purple);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .uploader, .tunnel {
  margin-top: 10rpx;
  height: 140rpx;
  width: 100%;
  background: transparent;
  border: 0px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 40rpx;
  color: white;
  background: transparent;
}

button::after {
  border: none;
}

.menu-item {
  position: relative;
  margin: auto;
  margin-bottom: 10rpx;
  width: 95%;
  height: 250rpx;
  border-radius: 15rpx;
  background-size: cover;
}

.menu-title-view {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  justify-content: flex-start;
}

.menu-title-h2 {
  font-size: 80rpx;
  color: white;
  margin: 20rpx;
  letter-spacing: 15rpx;
  font-weight: bold;
}

.menu-title-h3 {
  font-size: 34rpx;
  color: white;
}

.menu-image-view {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  justify-content: flex-end;
}

.menu-image {
  width: 150rpx;
  height: 150rpx;
  opacity: 0.6;
}

.menu-background-view {
  width: 100%;
  height: 100%;
  position: absolute;
  border-radius: 10rpx;
  z-index: -1;
}

.menu-small-container {
  display: flex;
  width: 95%;
  margin: auto;
  flex-direction: row;
  justify-content: flex-start;
}

.menu-small-item {
  position: relative;
  margin-bottom: 10rpx;
  margin-left: 3%;
  width: 48.5%;
  height: 200rpx;
  border-radius: 10rpx;
}

.menu-small-background-view {
  width: 100%;
  height: 100%;
  position: absolute;
  border-radius: 10rpx;
  z-index: -1;
}

.menu-small-title-view {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  justify-content: flex-start;
}

.menu-button {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  background: transparent;
  z-index: 100;
}

.menu-small-title-h2 {
  font-size: 50rpx;
  color: white;
  margin: 20rpx;
  letter-spacing: 0rpx;
  font-weight: bold;
}

.menu-small-title-h3 {
  font-size: 27rpx;
  color: white;
}

.show-gifts-view {
  width: 95%;
  margin: auto;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.show-gifts {
  width: 200rpx;
  height: 50rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.cell-group {
  width: 100%;
}

.image-icon {
  width: 120rpx;
  height: 120rpx;
}

.login-button {
  width: 100%;
  height: 100%;
  background: transparent;
  position: absolute;
  z-index: 100;
}

.xm_fixed{
  position: fixed;
  right: 50rpx;
  bottom: 250rpx;
  z-index: 100;
