/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.swiper-container {
  width: 100%;
  height: 360rpx;
}

.image-swiper-item {
  width: 100%;
  height: 100%;
}

.search-view {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  display: flex;
}

.search-input {
  background: white;
  opacity: 0.6;
  width: 600rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.input-place {
  margin-left: 15rpx;
  font-size: 25rpx;
  line-height: 50rpx;
}

.search-button {
  background: lightblue;
  opacity: 0.8;
  width: 100rpx;
  height: 50rpx;
  margin-left: 10rpx;
  border-radius: 25rpx;
  font-size: 23rpx;
  line-height: 50rpx;
  color: lightseagreen;
}

.tab-view {
  margin-top: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.image-list-view {
  margin-top: 10rpx;
  background: white;
  width: 100%;
}

.image-item {
  width: 100%;
}

.load-button-view {
  width: 100%;
  opacity: 0.8;
  height: 100rpx;
  margin-top: 10rpx;
  margin-bottom: 100rpx;
}

.load-button {
  width: 100%;
  margin-left: 10rpx;
  margin-right: 10rpx;
  height: 60rpx;
  font-size: 24rpx;
  border-radius: 5rpx;
  line-height: 60rpx;
  color: lightseagreen;
}
